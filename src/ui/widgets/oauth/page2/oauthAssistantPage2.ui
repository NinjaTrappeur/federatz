<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.10.2 -->
<interface>
  <!-- interface-name page1.ui -->
  <requires lib="gtk" version="4.6"/>
  <template class="oauthAssistantPage2" parent="GtkBox">
    <property name="halign">center</property>
    <property name="margin-bottom">12</property>
    <property name="margin-end">12</property>
    <property name="margin-start">12</property>
    <property name="margin-top">12</property>
    <property name="orientation">vertical</property>
    <property name="spacing">12</property>
    <property name="valign">center</property>
    <child>
      <object class="GtkLabel">
        <property name="justify">center</property>
        <property name="label">&lt;b&gt;Generate Auth Token&lt;/b&gt;</property>
        <property name="use-markup">True</property>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="halign">center</property>
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <child>
          <object class="GtkLabel">
            <property name="label">We need an authorization token to connect to your fediverse account.</property>
            <property name="natural-wrap-mode">word</property>
            <property name="wrap">True</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label">The following link will redirect you to your instance login page. Please login then copy paste the generated authorization token to the text box below.</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="authorization_link_label">
            <property name="label">&lt;a href="http://alternativebit.fr" title="Generate "&gt;Click here to generate the authorization Token&lt;/a&gt;</property>
            <property name="use-markup">True</property>
            <property name="use-underline">True</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="halign">center</property>
            <property name="spacing">12</property>
            <property name="valign">center</property>
            <child>
              <object class="GtkLabel">
                <property name="label">Authorization Token:</property>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="authorization_token_entry"/>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
